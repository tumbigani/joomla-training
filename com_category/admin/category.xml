<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2" method="upgrade">

        <name>Category!</name>
        <!-- The following elements are optional and free of formatting constraints -->
        <creationDate>August 2014</creationDate>
        <author>Gani Tumbi</author>
        <authorEmail>gani@tasolglobal.com</authorEmail>
        <authorUrl>http://www.tasolglobal.com</authorUrl>
        <copyright>Copyright Info</copyright>
        <license>License Info</license>
        <!--  The version string is recorded in the components table -->
        <version>0.0.2</version>
        <!-- The description is optional and defaults to the name -->
        <description>create simple category component ...</description>
 		<install> <!-- Runs on install -->
                <sql>
                        <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
                </sql>
        </install>
        <uninstall> <!-- Runs on uninstall -->
                <sql>
                        <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
                </sql>
        </uninstall>
        <update> <!-- Runs on update; New in 2.5 -->
                <schemas>
                        <schemapath type="mysql">sql/updates/mysql</schemapath>
                </schemas>
        </update>

        <!-- Site Main File Copy Section -->
        <!-- Note the folder attribute: This attribute describes the folder
                to copy FROM in the package to install therefore files copied
                in this section are copied from /site/ in the package -->
        <files folder="site">
                <filename>index.html</filename>
                <filename>category.php</filename>
                <filename>controller.php</filename>
                <folder>views</folder>
                <folder>models</folder>
                <folder>language</folder>
                <folder>controllers</folder>
        </files>

        <media destination="com_category" folder="media">
                <filename>index.html</filename>
                <folder>images</folder>
                <folder>js</folder>
                <folder>style</folder>
        </media>

        <administration>
                <!-- Administration Menu Section -->
                <menu img="../media/com_category/images/tux-16x16.png">COM_CATEGORY_MENU</menu>
                <!-- Administration Main File Copy Section -->
                <!-- Note the folder attribute: This attribute describes the folder
                        to copy FROM in the package to install therefore files copied
                        in this section are copied from /admin/ in the package -->
                <files folder="admin">
                        <!-- Admin Main File Copy Section -->
                        <filename>index.html</filename>
                        <filename>category.php</filename>
                        <filename>access.xml</filename>
                        <filename>controller.php</filename>
                        <!-- SQL files section -->
                        <folder>sql</folder>
                        <!-- tables files section -->
                        <folder>tables</folder>
                        <!-- models files section -->
                        <folder>models</folder>
                        <!-- views files section -->
                        <folder>views</folder>
                        <!-- admin languages files section -->
                        <folder>language</folder>
                        <!-- controllers files section -->
                        <folder>controllers</folder>
                        <folder>helpers</folder>
                        <filename>config.xml</filename>
                </files>
        </administration>
</extension>