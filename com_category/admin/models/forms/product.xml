<?xml version="1.0" encoding="utf-8"?>
<form >
        <fieldset>
                <field
                        name="id"
                        type="hidden"
                />

                <field
                        name="name"
                        type="text"
                        label="COM_PRODUCT_TITLE_LABEL"
                        description="COM_CATEGORY_PRODUCT_title_DESC"
                        size="40"
                        class="inputbox"
                        default=""
                        required="true"
                />

                <field
                name="categories"
                type="productedit"
                label="COM_CATEGORIES_FIELD_PARENT_CATEGORY_LABEL"
                description="COM_CATEGORIES_FIELD_PARENT_DESC"
                multiple="true"
                required="true"
                />

                <field
                    name="image"
                    type="file"
                    label="COM_CATEGORIES_FILE_PARENT_LABEL"
                    multiple="true"

                />

                <field
                    name="description"
                    type="editor"
                    label="JGLOBAL_DESCRIPTION"
                    description="COM_CATEGORIES_DESCRIPTION_DESC"
                    filter="JComponentHelper::filterText"
                    buttons="true"
                    hide="readmore,pagebreak"/>

               <field
                    name="published"
                    type="radio"
                    class="btn-group btn-group-yesno"
                    default="1"
                    label="COM_CATEGORY_CATEGORY_PUBLISHED_LABEL"
                    description="COM_CATEGORY_CATEGORY_PUBLISHED_LABEL">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

        </fieldset>
</form>